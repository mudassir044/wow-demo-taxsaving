    <script>
        AOS.init();
        feather.replace();

        // FAQ Toggle
        document.querySelectorAll('.faq-item > div:first-child').forEach(item => {
            item.addEventListener('click', () => {
                const answer = item.nextElementSibling;
                answer.classList.toggle('hidden');
            });
        });

        // Savings Chart
        const ctx = document.getElementById('savingsChart').getContext('2d');
        const savingsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Employer FICA', 'Employee Take-Home', 'Workers\' Comp'],
                datasets: [{
                    label: 'Annual Savings (100 Employees)',
                    data: [68160, 86400, 0],
                    backgroundColor: ['#3B82F6', '#60A5FA', '#6B21A8'],
                    borderColor: ['#FFFFFF'],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#FFFFFF33' },
                        ticks: { color: '#FFFFFF' }
                    },
                    x: {
                        grid: { color: '#FFFFFF33' },
                        ticks: { color: '#FFFFFF' }
                    }
                },
                plugins: {
                    legend: { labels: { color: '#FFFFFF' } }
                },
                responsive: true
            }
        });

        // Savings Calculator Logic
        const slider = document.getElementById('employee-slider');
        const input = document.getElementById('employee-input');
        const count = document.getElementById('employee-count');
        const employerSavings = document.getElementById('employer-savings');
        const employeeTotal = document.getElementById('employee-total');
        const savingsBar = document.getElementById('savings-bar');
        const tooltip = document.getElementById('slider-tooltip');
        const tooltipValue = document.getElementById('tooltip-value');

        function formatNumber(num) {
            return Math.round(num).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        function updateCalculator(value) {
            value = Math.max(1, Math.min(500, value));
            count.textContent = value;
            employerSavings.textContent = formatNumber(value * 681.60);
            employeeTotal.textContent = formatNumber(value * 864);
            savingsBar.style.width = `${(value / 500) * 100}%`;
            tooltipValue.textContent = value;
            slider.value = value;
            input.value = value;

            const percent = (value - slider.min) / (slider.max - slider.min);
            const thumbWidth = 20;
            const sliderWidth = slider.offsetWidth - thumbWidth;
            const tooltipWidth = tooltip.offsetWidth;
            tooltip.style.left = `calc(${percent * 100}% + ${thumbWidth / 2 - tooltipWidth / 2}px)`;

            anime({
                targets: '.bg-deep-navy/70',
                scale: [1, 1.05, 1],
                duration: 600,
                easing: 'easeOutQuad'
            });

            savingsChart.data.datasets[0].data[0] = value * 681.60;
            savingsChart.data.datasets[0].data[1] = value * 864;
            savingsChart.update();
        }

        slider.addEventListener('input', () => {
            tooltip.classList.remove('hidden');
            updateCalculator(slider.value);
        });

        slider.addEventListener('change', () => {
            tooltip.classList.add('hidden');
        });

        input.addEventListener('input', () => {
            let value = parseInt(input.value) || 1;
            updateCalculator(value);
        });

        function animateNumber(element, start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                element.textContent = formatNumber(value);
                if (progress < 1) {
                    requestAnimationFrame(step);
                }
            };
            requestAnimationFrame(step);
        }

        slider.addEventListener('input', () => {
            const value = parseInt(slider.value);
            animateNumber(employerSavings, parseInt(employerSavings.textContent.replace(/,/g, '')), value * 681.60, 500);
            animateNumber(employeeTotal, parseInt(employeeTotal.textContent.replace(/,/g, '')), value * 864, 500);
        });

        document.querySelectorAll('.bg-deep-navy/70').forEach(card => {
            card.addEventListener('mouseenter', () => {
                anime({
                    targets: card,
                    scale: 1.05,
                    boxShadow: '0 0 20px rgba(59, 130, 246, 0.5)',
                    duration: 300,
                    easing: 'easeOutQuad'
                });
            });
            card.addEventListener('mouseleave', () => {
                anime({
                    targets: card,
                    scale: 1,
                    boxShadow: '0 0 0 rgba(59, 130, 246, 0)',
                    duration: 300,
                    easing: 'easeOutQuad'
                });
            });
        });

        updateCalculator(100);
    </script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>